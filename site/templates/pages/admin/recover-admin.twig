{% extends "layout.twig" %}
{% import "macro.twig" as m %}

{% block title %}
    mot de passe oublie
{% endblock %}

{% block body %}
    <div class="container firstContainer">
    <div class="row jumbotron">
    <form role="form" action="{{ path_for('recover-admin.post') }}" method="post" class="jumbotron-contents">
        <fieldset>
            <div class="form-group">
                <input class="form-control" placeholder="E-mail" name="email" type="email" autofocus>
            </div>
            <div class="form-group">
                <input class="btn btn-lg btn-success btn-block" type="submit" value="Envoyer">
            </div>
        </fieldset>
    </form>
    </div>
    </div>
    {% if send == true %}
        <p>Si l'adresse est dans notre base de donnée, un mail a été envoyé</p>
    {% endif %}
{% endblock %}