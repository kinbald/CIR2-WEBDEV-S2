{% extends "layout.twig" %}
{% import "macro.twig" as m %}

{% block css %}
    {{ parent() }}
    {{ m.css("style.css") }}
{% endblock %}

{% block title %}
Page de connexion
{% endblock %}

{% block body %}
    {{ include('navbar.twig') }}

    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Connexion</h3>
                    </div>
                    <div class="panel-body">

                        {% if errors %}
                        <div class="alert alert-danger">
                                {% for error in errors %}
                                    <div class="text">
                                    {{ error }}
                                    </div>
                                {% endfor %}
                        </div>
                        {% endif %}
                        <form role="form" action="{{ path_for('login-admin.post') }}" method="post">
                            <fieldset>
                                <div class="form-group">
                                    <input class="form-control" placeholder="E-mail" name="email" type="email" value="{{ old }}" required autofocus>
                                </div>
                                <div class="form-group">
                                    <input class="form-control" placeholder="Mot de passe" name="password" type="password" required>
                                </div>
                                <div class="checkbox">
                                    <label>
                                        <input type="checkbox" name="remember"> Se souvenir de moi
                                    </label>
                                </div>
                                <!-- Change this to a button or input when using this as a form -->
                                <div class="form-group">
                                    <button class="btn btn-lg btn-success btn-block" type="submit">Connexion</button>
                                </div>
                            </fieldset>
                        </form>
                        <a href="{{ path_for('recover-admin.get') }}">Mot de passe oubli√©</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}