{% extends "layout.twig" %}
{% import "macro.twig" as m %}

{% block css %}
    {{ parent() }}
    {{ m.css("style.css") }}
{% endblock %}

{% block body %}
    {{ include('navbar.twig') }}
    <div class="container-fluid text-center firstContainer" xmlns="http://www.w3.org/1999/html">
        <div class="row content">
            <div class="col-md-2 sidenav">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <h3 class="panel-title">Mes Informations</h3>
                    </div>
                    <div class="panel-body">
                        {{ infoUtilisateur.nom_rl |capitalize }}
                        {{ infoUtilisateur.prenom_rl |capitalize}}
                        <div class="row"></div>
                        {{ infoUtilisateur.adresse_mail_rl }}
                        <div class="row"></div>
                        {{ infoUtilisateur.complement_d_adresse }}
                        <div class="row"></div>
                        {{ infoUtilisateur.code_postal }}{{ infoUtilisateur.ville }}
                        {{ mot_de_passe_rl }}
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <form role="form" action="{{ path_for('add-user.post') }}" method="post">
                    <fieldset>
                        <div class="form-group">
                            <span class="label label-primary col-md-4 center-block info">Ajout Utilisateur</span>
                            <input class="form-control" placeholder="Nom" name="nom_rl" style="text-align:center; margin: 5px;" type="text" value="" required autofocus>
                            <input class="form-control" placeholder="Prenom" name="prenom_rl" type="text"  style="text-align:center; margin: 5px;" value="" required autofocus>
                            <input class="form-control" placeholder="E-mail" name="adresse_mail_rl" type="email"  style="text-align:center; margin: 5px;" value="" required autofocus>
                            <input class="form-control" placeholder="Ville" name="ville" type="text"  style="text-align:center; margin: 5px;" value="" required autofocus>
                            <input class="form-control" placeholder="Code Postal" name="code_postal" type="number"  style="text-align:center; margin: 5px;" value="" required autofocus>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-lg btn-success btn-block" type="submit">Envoyez</button>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
{% endblock %}


{% block footer %}
    <div id="footer" class="footer-copyright ">
        <i class="glyphicon glyphicon-copyright-mark" aria-hidden="true"></i> Copyright 2017 Guillaume Desrumaux, Artru Thomas, Meziane Yanis, Herrenschmidt Felix, Billaud William
    </div>
{% endblock %}