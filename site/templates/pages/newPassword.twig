{% extends "layout.twig" %}
{% import "macro.twig" as m %}

{% block title %}
    Nouveau mot de passe
{% endblock %}

{% block body %}
    {{ include('navbar.twig') }}
<div class="container firstContainer ">
    <div class="row jumbotron">
    <form role="form" action="{{ path_for('recoverToken.post',{'token':token} ) }}" method="post" class="jumbotron-contents">
        <fieldset>
            <div class="form-group">
                <input class="form-control" placeholder="mot de passe" name="password" type="password" autofocus>
            </div>
            <div class="form-group">
                <input class="form-control" placeholder="confirmer mot de passe" name="confirmation" type="password"
                       autofocus>
            </div>
            <div class="form-group">
                <input class="btn btn-lg btn-success btn-block" type="submit" value="Envoyer">
            </div>
        </fieldset>
    </form>
    {% if statut == "motDePasseDifferent" %}
        <p>Les mots de passes saisie ne correspondent pas</p>
    {% elseif statut =="ok" %}
        <p>mot de passe modifi√©, rendez vous sur la page de <a href="{{ path_for('login.get') }}">connexion</a> </p>
    {% elseif statut == "tokenAbsent" %}
        <p>token inexistant</p>
    {% endif %}
    </div>
</div>
{% endblock %}